<!DOCTYPE html>
<html>
<head>
	<title>Avalanche</title>
	<%= stylesheet_link_tag    "application", :media => "all" %>
	<%= javascript_include_tag "application" %>
	<%= csrf_meta_tags %>
	<link href='http://fonts.googleapis.com/css?family=Open+Sans|Galdeano' rel='stylesheet' type='text/css'>
</head>
<body>
	<%= render "shared/header" %>
	<div class="main">
		<div class="container" style="min-height: 0; padding: 0px;">			
			<div class="row">
				<div class="span12">
					<!-- alert or notices -->
					<% flash.each do |name, msg| %>
						<%= content_tag :div, msg, :id => "flash_#{name}", class: "alert alert-info centered-text" %>
					<% end %>
				</div>
			</div>
		</div>
		<!-- end alert or notices -->
		<%= yield %>					
	</div>
	<%= render "shared/footer" %>
	<div id="bottom" class="shadow"></div>
</body>
</html>
