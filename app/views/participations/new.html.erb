<div id="back"><%= link_to "&larr; Back".html_safe, @contest %></div>
<div class="centered-text">
	<h1 class="white">Apply to '<%= @contest.name %>'</h1>
	<hr class="white">
</div>
<div class="centered-600 white">
	<%= form_for([@contest, @participation]) do |form| %>
		<%= form.label :video, "Video URL (youtube only, please):" %>
		<%= form.text_field :video, class: "span6" %>
		<br><br>
		<%= form.submit "Submit application" %> <span class="buttontext">or <%= link_to "cancel", @contest %> </span>
	<% end %>
</div>