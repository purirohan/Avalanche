<% if @isOwner %>
	<div id="back"><%= link_to "&larr; Back".html_safe, user_path(current_user) %></div>
<% else %>
	<div id="back"><%= link_to "&larr; Back".html_safe, contests_path %></div>
<% end %>
<% if @isOwner %>
	<div id="edit"><%= link_to "Edit &rarr;".html_safe, edit_contest_path(@contest) %></div>
<% end %>
<div class="centered-text">
	<h1><%= @contest.name %></h1>
	<h2><%= @owner %></h2>
	<p><b>Category:</b> <%= @contest.category %><span class="dot">&middot;</span><b>Challenge ends:</b> <%= @contest.ending %></p>
	<% if !@isOwner %>
		<% if !@has_submitted %>
			<br>
			<%= link_to "Apply", new_contest_participation_path(@contest), class: "button large" %>
		<% else %>
			<br>
			<%= link_to "Withdraw application", {:controller => "participations", :action => "destroy", :contest_id => @contest.id, :id => @curr_user_submission.id}, method: :delete, confirm: "Are you sure you want to your application to this contest?", class: "button large" %>
		<% end %>
	<% end %>
	
	<hr class="white">
</div>
<div class="row">
	<div class="span6">
		<%= simple_format(@contest.desc) %>
	</div>
	<div class="span6" style="text-align: right;">
		<%= content_tag(:iframe, "", :src => @video, :style => "width: 380px; height: 285px;") %>
	</div>
</div>
<div class="row">
	<div class="span12">
		<h2>Submissions</h2>
		<% @submissions.each do |submission| %>
			<%= content_tag :div, class: "submission animated inner-shadow" do %>
				<%= link_to "", [@contest, submission], class: "follow" %>
				<% if current_user.id == submission.user_id %>
					<%= link_to [@contest, submission], method: :delete, confirm: "Are you sure you want to your application to this contest?" do %>
						<%= content_tag :button, class: "close animated", type: "button" do %>
							&times;
						<% end %>
					<% end %>
				<% end %>
				<%= content_tag(:iframe, "", :src => embed_video(submission), :style => "float: left; width: 263px; height: 197px;") %>
			<% end %>
		<% end %>
	</div>
</div>