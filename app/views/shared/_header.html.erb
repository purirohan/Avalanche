<div id="header">	
	<div id="top" class="navbar">
		<div id="navback"></div>
		<div class="container" style="width: 940px; margin-left: auto; margin-right: auto; position: relative;">
			<% if current_user %>
				<div id="navname"><h2><%= current_user.name %></h2></div>
			<% end %>
			<div class="navbar-inner">				
				<div class="nav-collapse">
					<ul class="nav pull-left">	
						<li style="margin-right: 30px;">
							<%= link_to root_path do %>
								<%= content_tag :div, id: "header-logo" do %>
									<%= content_tag :h2 do %>
										<%= image_tag "Logo_Final.png", :size => "96x86" %>
									<% end %>
								<% end %>
							<% end %>
						</li>
					</ul>
					<ul id="rightnav" class="nav pull-right">
						<li>
							<%= link_to contests_path do %>
								<h2 class="animated-fast">Browse</h2>
							<% end %>
						</li>

						<li>
							<%= link_to new_contest_path do %>
								<h2 class="animated-fast">Submit a prompt</h2>
							<% end %>
						</li>
						<li>
							<!-- sign in or log in or log out -->
							<div id="user-nav">
								<% if current_user %>
									<h2><%= link_to "Profile", user_path(current_user), class: "animated-fast" %>/<%= link_to "Sign out", log_out_path %></h2>
								<% else %>
									<h2><%= link_to "Sign in", log_in_path %>/<%= link_to "Sign up", sign_up_path, class: "animated-fast" %></h2>
								<% end %>
							</div>
							<!-- end sign in or log in or log out -->
						</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
	<div class="separator"></div>
</div>
